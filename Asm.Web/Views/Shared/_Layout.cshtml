                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="TimKiem"> <input class="form-control me-1" type="search" placeholder="Tìm kiếm" aria-label="Search"></a>
                        </li>
                     
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SanPham" asp-action="Index"> danh sách sản phẩm</a>
                        </li>
                    </ul>
                            
                </div>
                <ul class="navbar-nav">
            <li class="nav-item">
                <a  asp-controller="GHCT" asp-action="Index" class="nav-link"><i class="fa-solid fa-cart-plus"></i> </a>
            </li>
           <ul class="nav nav-pills">
 
    <li class="nav-item dropdown">
  <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"> <i class="fa-regular fa-user" style="color: #511f1f;"></i></a>
    <ul class="dropdown-menu">
      <li><a class="dropdown-item" asp-controller="User" asp-action="Login">Đăng nhập</a></li>
      <li><a class="dropdown-item" asp-controller="User" asp-action="Create" >Đăng ký</a></li>
      <li><a class="dropdown-item" href="#">Something else here</a></li>
    
    </ul>
  
 </li>
</ul>

        </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
     <script src="~/lib/bootstrap/dist/js/font-fontawesome-ae333ffef2.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
